<%- include('partials/headEdit') %>

#legal{
    display:grid;
    place-content:center;
    font-size:0.7rem;
}
h2{
    font-family: futura light;
    font-weight:900;
    font-size:2rem;
    margin-top:2em;
}
#modal img{
    max-width:95vw;
    max-height:75vh;
    border-radius:25px;
}
.name, #modal-name{
    font-weight:900;
    font-size:1.3rem;
    font-family: futura light;
}
main{
    font-family:serif;
    display:grid;
    place-content:center;
    min-height:calc(100vh - 5.5em);
}
#wine-btg{
    max-width:7in;
    min-height:8.5in;
    border:1px solid red;
    background: white;
}
.price, #modal-price{
    font-weight:900;
    font-size:1.2rem;
}
.allergies, #modal-allergies{
    font-family:sans-serif;
    color:red;
    font-size:0.9rem;
}
body{
    position:relative;
}
#modal{
    width:100vw;
    min-height:100vh;
    background: #888888ee;
    position: fixed;
    inset:0;
    display:none;
    place-content:center;
    padding:10px;
}
#close-modal-button{
    font-size:60px;
    position:absolute;
    top:5px;
    right:5px;
    cursor:pointer;
    font-weight:900;
}
figure{
    display:table;
}
figcaption{
    background:#ccc;
    padding:10px;
    border-radius:25px;
    display:table-caption;
    caption-side:bottom;
}

@media(min-width:8.5in){
    #specials-menu{
        padding:0.5in;
    }
}
main h1{
    text-align:left;
    font-family:futura light;
    font-size:3rem;
}
.fa-trash{
    color:red;
}
.fa-pen{
    color:#ffae42;
}
button{
    background:darkblue;
    display:inline-block;
    margin:0;
    padding:0.5em;
}
form{
    display:inline-block;
}


