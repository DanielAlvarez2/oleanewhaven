<!DOCTYPE html>
<html lang="en">
<head>
    <meta name='description' 
          content='Olea Restaurant, New Haven, Connecticut, 
          Current Drink Menu, Craft Drinks, Sangria, Beer,
          Non-Alcoholic Mocktails'>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel='stylesheet' href='/style.css'>
    <script src="https://kit.fontawesome.com/21ef82ed30.js" crossorigin="anonymous"></script>

    <style>
        .menu{
            max-width:7in;
            min-height:8.5in;
            border:1px solid black;
            padding:10px;
        }
    </style>
</head>
<body>
    <div id="wrapper">
 
<main>

<nav id='nav-top'>
    <a href='/dinner'>dinner</a>
    <a href='/specials'>specials</a>
    <a href='/dessert'>dessert</a>
    <a href='/wine'>wine</a>
    <a class='active-page'>drinks</a>
</nav>

<div id='drinks-menu' class='menu'>

<% if(req.user){ %>
    <a href='/edit/craftDrinks'>
        <i class="fa-solid fa-gear"></i>
    </a>
<% } %>


            <h1>olea</h1>
            <hr>

            <h2>craft drinks</h2>
            <ul>
                <% for (let i=0;i<craftDrinks.length;i++){ %>
                    <li class='menu-item'
                        onclick='showModal(<%= JSON.stringify(craftDrinks[i]) %>)'>
                        <span class='name'><%= craftDrinks[i].name %></span><br>
                        <%- craftDrinks[i].description %>
                        &nbsp; 
                        <span class='price'><%= craftDrinks[i].price %></span><br>
                    </li>
                <%}%>
            </ul>

            <h2>sangr√≠a</h2>
            <ul>
                <% for (let i=0;i<sangria.length;i++){ %>
                    <li class='menu-item'
                        onclick='showModal(<%= JSON.stringify(sangria[i]) %>)'>
                        <span class='name'><%= sangria[i].name %></span><br>
                        <%- sangria[i].description %>
                        &nbsp; 
                        <span class='price'><%= sangria[i].price %></span><br>
                    </li>
                <%}%>
            </ul>

            <h2>non-alcoholic</h2>
            <ul>
                <% for (let i=0;i<nonAlcoholic.length;i++){ %>
                    <li class='menu-item'
                        onclick='showModal(<%= JSON.stringify(nonAlcoholic[i]) %>)'>
                        <span class='name'><%= nonAlcoholic[i].name %></span><br>
                        <%- nonAlcoholic[i].description %>
                        &nbsp; 
                        <span class='price'><%= nonAlcoholic[i].price %></span><br>
                    </li>
                <%}%>
            </ul>

            <h2>beer</h2>
            <h3>CAN</h3>
            <ul>
                <% for (let i=0;i<beerCans.length;i++){ %>
                    <li 
                        class='menu-item'onclick='showModal(<%= JSON.stringify(beerCans[i]) %>)'>
                        <span class='name'><%= beerCans[i].name %></span><br>
                        <%- beerCans[i].description %>
                        &nbsp; 
                        <span class='price'><%= beerCans[i].price %></span><br>
                    </li>
                <%}%>
            </ul>

            <h3>DRAFT</h3>
            <ul>
                <% for (let i=0;i<beerDrafts.length;i++){ %>
                    <li class='menu-item'
                        onclick='showModal(<%= JSON.stringify(beerDrafts[i]) %>)'>
                        <span class='name'><%= beerDrafts[i].name %></span><br>
                        <%- beerDrafts[i].description %>
                        &nbsp; 
                        <span class='price'><%= beerDrafts[i].price %></span><br>
                    </li>
                <%}%>
            </ul>


   

    <div id='modal'>
        <i class='fa-solid fa-square-xmark x'
           id='close-modal-button'
           onclick='closeModal()'></i>
        <div id='modal-item'>
            <figure>
                <img src='' id='modal-image'>
                <figcaption>
                    <div id='modal-text'>
                        <span id='modal-name'></span><br>
                        <span id='modal-description'></span>&nbsp;
                        <span id='modal-price'></span><br>
                        <span id='modal-allergies'></span>
                    </div>
                </figcaption>
            </figure>
        </div><!--#modal-item-->
    </div><!--#modal-->
</div><!--#specials-menu-->
</main>

<script>
    const modal = document.querySelector('#modal')
    const modalImage = document.querySelector('#modal-image')
    const modalName = document.querySelector('#modal-name')
    const modalDescription = document.querySelector('#modal-description')
    const modalPrice = document.querySelector('#modal-price')
    const modalAllergies = document.querySelector('#modal-allergies')

    function showModal(item){
        if (!item.image) return
        console.log(item)
        modalImage.src=item.image
        modalName.innerHTML = item.name
        modalDescription.innerHTML = item.description
        modalPrice.innerHTML = item.price
        modalAllergies.innerHTML = item.allergies
        modal.style.display = 'grid'
    }
    function closeModal(){
        modal.style.display = 'none'
    }
</script>
<%- include('partials/footer') %>

</body>
</html>